  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-extract sessionId from analyze responses",
          "if (pm.response && pm.response.json() && pm.response.json().sessionId) {",
          "    pm.collectionVariables.set('sessionId', pm.response.json().sessionId);",
          "}"
        ]
      }
    }
  ]

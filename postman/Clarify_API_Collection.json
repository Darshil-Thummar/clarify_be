        {
          "name": "Analyze Input - Incomplete (Triggers Questions)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"input\": \"I had a bad day at work.\",\n  \"storageOptIn\": true,\n  \"redactNames\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/analyze",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "analyze"]
            }
          },
          "response": []
        },
        {
          "name": "Process Answers",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"sessionId\": \"{{sessionId}}\",\n  \"answers\": [\n    \"I felt excluded because everyone was in groups and I was alone\",\n    \"I'm afraid they don't actually like me and are just being polite\",\n    \"I felt sad and embarrassed, like I was invisible\"\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/answers",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "answers"]
            }
          },
          "response": []
        }
      ]
    },

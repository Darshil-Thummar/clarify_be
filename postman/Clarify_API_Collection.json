              "name": "4. Delete Session",
              "request": {
                "method": "DELETE",
                "header": [],
                "url": {
                  "raw": "{{baseUrl}}/api/v1/session/{{sessionId}}",
                  "host": ["{{baseUrl}}"],
                  "path": ["api", "v1", "session", "{{sessionId}}"]
                }
              },
              "response": []
